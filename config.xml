<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>FIFA Tournament</name>

    <description>
        FIFA Tournament hilft dir dabei Turniere bei FIFA mit Freunden besser zu organisieren.
        Die App führt Statistiken über verganene Turniere um dich und deine Freunde stets zu vergleichen.
    </description>

    <author href="http://www.ppilz.de" email="info@ppilz.de">
        Phillip Pilz
    </author>

    <icon src="icon.png"  />

    <platform name="android">
        <icon src="icon.png" density="ldpi" />
        <icon src="icon.png" density="mdpi" />
        <icon src="icon.png" density="hdpi" />
        <icon src="icon.png" density="xhdpi" />
    </platform>

    <gap:platform name="android" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>

</widget>